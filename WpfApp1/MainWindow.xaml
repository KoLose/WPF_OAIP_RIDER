<Window
    Background="#2f3864"
    Foreground="white"
    Height="600"
    Icon="Source/icon.avif"
    Title="Трекер привычек"
    Width="800"
    mc:Ignorable="d"
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <local:DoneToTextDecorationConverter x:Key="DoneToTextDecorationConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <MediaElement
            Grid.Row="0"
            LoadedBehavior="Manual"
            UnloadedBehavior="Stop"
            Volume="1"
            x:Name="mediaPlayer" />

        <MediaElement
            Grid.Row="0"
            LoadedBehavior="Manual"
            Visibility="Collapsed"
            Volume="1"
            x:Name="mediaPlayer2" />

        <TextBlock
            FontSize="25"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Text="Трекер привычек"
            VerticalAlignment="Center" />
        <Button
            Click="ToggleThemeBtn_Click"
            Content="🌓"
            FontSize="20"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="0,0,10,0"
            Width="40"
            x:Name="ToggleThemeBtn" />

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <TextBox
                FontSize="20"
                Height="30"
                Margin="0,0,10,0"
                Width="250"
                x:Name="TaskInputTb" />
            <Button
                Background="#4f5781"
                BorderThickness="0"
                Click="AddTaskBtn_Click"
                Content="Добавить"
                Foreground="white"
                Width="100"
                x:Name="AddTaskBtn" />
        </StackPanel>

        <ListBox
            Background="#4f5781"
            FontSize="30"
            Grid.Row="3"
            x:Name="TaskListLb">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True" Margin="0,2">
                        <CheckBox
                            Checked="CheckBox_Changed"
                            IsChecked="{Binding IsDone}"
                            Margin="5,10,5,5"
                            Unchecked="CheckBox_Changed"
                            VerticalAlignment="center" />
                        <TextBlock
                            Foreground="white"
                            Text="{Binding Title}"
                            TextDecorations="{Binding IsDone, Converter={StaticResource DoneToTextDecorationConverter}}"
                            VerticalAlignment="Center" />
                        <Button
                            Background="#4f5781"
                            BorderThickness="0"
                            Click="DeleteTaskBtn_Click"
                            Content="✕"
                            DockPanel.Dock="Right"
                            FontSize="25"
                            Foreground="White"
                            Height="35"
                            Margin="5"
                            Width="35"
                            x:Name="DeleteTaskBtn" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock
                FontWeight="Bold"
                Margin="0,10,10,0"
                x:Name="CounterTextTbl" />
            <ProgressBar
                Foreground="#4f5781"
                Height="20"
                Margin="0,10,0,0"
                Value="{Binding ProgressValue}"
                Width="200" />
            <TextBlock
                Margin="10,10,0,0"
                Text="{Binding ProgressValue, StringFormat={}{0:N0}%}"
                VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>